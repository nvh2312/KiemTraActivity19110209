<RelativeLayout android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:text="Công cụ tính lãi tiền gửi"
    android:textSize="30sp"
    android:gravity="center"
    android:textStyle="bold"
    android:textAllCaps="true"
    android:textColor="#FF3700B3"
    android:id="@+id/txtTitle"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_below="@+id/txtTitle"
    android:id="@+id/SoTienLai"
    android:layout_marginTop="20sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền gửi *"
        android:textSize="24sp"
        android:id="@+id/text3"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edtSoTienGui"
        android:inputType="numberDecimal"
        android:textColor="#FF3700B3"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đ"
        android:textSize="30sp"
        android:layout_below="@id/text3"
        android:layout_marginLeft="375dp"
        />

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_below="@+id/SoTienLai"
    android:id="@+id/LaiSuatGui"
    android:layout_marginTop="20sp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lãi suất gửi *"
        android:textSize="24sp"
        android:id="@+id/text4"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edtLaiSuatGui"
        android:inputType="numberDecimal"
        android:textColor="#FF3700B3"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%/Năm"
        android:textSize="25sp"
        android:layout_below="@id/text4"
        android:layout_marginLeft="320dp"
        />

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_below="@+id/LaiSuatGui"
    android:layout_marginTop="20sp"
    android:id="@+id/KyHanGui"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kỳ hạn gửi *"
        android:textSize="24sp"
        android:id="@+id/text5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edtKyHanGui"
        android:inputType="numberDecimal"
        android:textColor="#FF3700B3"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tháng"
        android:textSize="25sp"
        android:layout_below="@id/text5"
        android:layout_marginLeft="333dp"
        />

</RelativeLayout>

<Button
    android:background="@drawable/buttonn"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:layout_below="@+id/KyHanGui"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    android:textSize="20sp"
    android:text="Xem kết quả"
    android:id="@+id/btnXemKetQua"
    android:textColor="#ffffff"
    />

</RelativeLayout>